import java.awt.Color;
import javax.swing.JFrame;

public class Breakout extends JFrame{
	
	static final long serialVersionUID = 1L;
	
	private BreakoutPanel panel;
	private final static Color BACKGROUND_COLOUR = Color.WHITE;
	
	public Breakout() {
		
		
		//setting up window
		setTitle(Settings.WINDOW_NAME);
		setSize(Settings.WINDOW_WIDTH, Settings.WINDOW_HEIGHT);
		setLocationRelativeTo(null); // center the window
        	setResizable(false);
        	getContentPane().setBackground(BACKGROUND_COLOUR); //check later //setBackground(Color.white);
       		setDefaultCloseOperation(EXIT_ON_CLOSE);
        	setVisible(true);
        	panel = new BreakoutPanel(this); //calling panel
        	add(panel); //adding panel to window
            
	}

	public static void main(String[] args) {
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
	         public void run() {
	        	 new Breakout();	
	         }
		});

	}
}

