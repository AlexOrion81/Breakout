import java.awt.Graphics;


public class Ball extends Sprite {

	private int xVelocity = 1, yVelocity = -1;

	// Constructor
	public Ball() {
		
		// Set width for ball
		setWidth(Settings.BALL_WIDTH);
		// Set height for ball
		setHeight(Settings.BALL_HEIGHT);
		// Call resetPosition
		resetPosition();
	}
	
	/**
	 * Resets the ball to the initial position
	 */
	public void resetPosition() {
		
		// Set the balls x
		setX(Settings.INITIAL_BALL_X);
		// Set the balls y
		setY(Settings.INITIAL_BALL_Y); 
	}
	
	public void update() {
		
		x += xVelocity; 
		// Increase the y variable by yVelocity
		y += yVelocity; 
		
		// Bounce off left side of screen
		if(x <= 0) { 
			
			// Set x to 0 so it does not leave the screen
			x = 0;
			// Change the x velocity to make the ball go right
			x *= +1;
			
		}
		
		// Bounce off right side of screen
		if(x >= Settings.WINDOW_WIDTH - Settings.BALL_WIDTH) {
			// Setting x to the right edge of the screen (see the above if condition)
			// Changing the x velocity to make the ball go left
			x = Settings.BALL_WIDTH;
			x *= -1;
		}
		
		// Bounce off top of screen
		if(y <= 0) {
			
			// Setting y to 0 so it does not leave the screen
			y = 0;
			// Changing the y velocity to make the ball go downward
			y *= -1;
		}
				
	}
	
	public void setXVelocity(int x) {
		// sets the x velocity
		x = xVelocity;
	}
	public void setYVelocity(int y) {
		// sets the y velocity
		y = yVelocity;
	}
	
	public int getXVelocity() {
		return x;	
	}
	public int getYVelocity() {
		return y;	
	}
	
	public void paint(Graphics g) {
		g.fillOval(x, y, Settings.BALL_WIDTH, Settings.BALL_HEIGHT);
	}
}

