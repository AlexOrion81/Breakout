import java.awt.Graphics;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Brick extends Sprite {
	
	private boolean broken = false;
	public int brick[][]; 	
	public int brickWidth;
	public int brickHeight;
	BRICK_COLOUR
	
	public Brick(int x, int y) {
		{
			
			this.x= x;
			this.y = y;
			
			this.brickWidth = w;
			this.brickHeight = h;
		
			brickWidth = Settings.BRICK_WIDTH;
			brickHeight = Settings.BRICK_HEIGHT;	
			broken = false;
		}
	}

	public boolean isBroken() {
		
		//brick is broken
		
		//TODO how tell
		/* Check whether brick is broken
		Using a nested loop to check whether any of the brick is broken */
		for (int row = 0; row < ROWS; ++row) {
			for (int col = 0; col < COLS; ++col) {
				if (brick[row][col]) {
					return false; // not broken
				}
			}
		
					
		return true; // brick is broken
		}
	}
	public void setBroken(boolean b) {
		// TODO: Set the broken variable using the parameter given
		
	this.broken= b;
		
		
	}
	
	public void paint(Graphics g) {
		if(!broken) {
			g.setColor(BRICK_COLOUR)
			g.fillRect(x, y, Settings.BRICK_WIDTH, Settings.BRICK_HEIGHT);
		}
	}
}
