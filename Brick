import java.awt.Graphics;

public class Brick extends Sprite {

	private boolean broken = false;

	public Brick(int x, int y) {
		
		//Setting x and y
		this.x = x;
		this.y = y;
		//Setting the width and height of the brick
		setWidth(Settings.BRICK_WIDTH);
		setHeight(Settings.BRICK_HEIGHT);
	}

	public boolean isBroken() {

		return broken; // brick is broken
	}

	public void setBroken(boolean b) {

		// Setting the broken variable
		broken = b;
	}

	public void paint(Graphics g) {

		if (!broken) {
			g.setColor(Settings.BRICK_COLOUR);
			g.fillRect(x, y, Settings.BRICK_WIDTH, Settings.BRICK_HEIGHT);
		}
	}
}
