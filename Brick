import java.awt.Graphics;

public class Brick extends Sprite {
	
	private boolean broken = false;
	public int brick[][];
	public int brickWidth;
	public int brickHeight;
	
	public Brick(int x, int y) {
		{
			brick = new int[x][y];		
			for(int i = 0; i<brick.length; i++)
			{
				for(int j =0; j<brick[0].length; j++)
				{
					//detect that brick is not intersected with the ball
					brick[i][j] = 1;
				}			
			}
			
			brickWidth = Settings.BRICK_WIDTH/y;
			brickHeight = Settings.BRICK_HEIGHT/x;
			
		}
	}

	public boolean isBroken() {
		return false;	// TODO: Return the correct variable
	}
	public void setBroken(boolean b) {
		// TODO: Set the broken variable using the parameter given
	}
	
	public void paint(Graphics g) {
		if(!broken) {
			g.fillRect(x, y, Settings.BRICK_WIDTH, Settings.BRICK_HEIGHT);
		}
	}
}
