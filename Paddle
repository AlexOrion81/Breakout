import java.awt.Graphics;

public class Paddle extends Sprite {

	private int xVelocity;
	
	public Paddle() {
		
		// Set width for paddle
		setWidth(Settings.PADDLE_WIDTH);
		// Setting height for paddle
		setHeight(Settings.PADDLE_HEIGHT);
		// Call resetPosition
		resetPosition();		
	}
	
	public void resetPosition() {
			
		// Setting paddles initial position of x 
		setX(Settings.INITIAL_PADDLE_X);
		// Setting paddles initial position of y
		setY(Settings.INITIAL_PADDLE_Y); 
	}

	public void update() {
		
		x += xVelocity;
		
		// Preventing the paddle from moving outside of the screen
		if (x <= 0) {
			x = 0;
			}
			if (x >= Settings.WINDOW_WIDTH - Settings.PADDLE_WIDTH) {
			x = Settings.WINDOW_WIDTH - Settings.PADDLE_WIDTH;
		}
	}
	
	public void paint(Graphics g) {
		
		//painting paddle
		g.setColor(Settings.PADDLE_COLOUR);
		g.fillRect(x, y, Settings.PADDLE_WIDTH, Settings.PADDLE_HEIGHT);
	}
	
	public void setXVelocity(int vel) {
		
		//Set x velocity
		this.xVelocity = vel;
	}
}
